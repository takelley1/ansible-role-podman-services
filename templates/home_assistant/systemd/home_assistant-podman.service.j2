{{ ansible_managed | comment }}
# container-{{ home_assistant_id }}.service

[Unit]
Description=Podman container-{{ home_assistant_id }}
Documentation=man:podman-generate-systemd(1)

[Service]
Restart=on-failure
ExecStart=/usr/bin/podman start {{ home_assistant_id }}
ExecStop=/usr/bin/podman stop -t 10 {{ home_assistant_id }}
KillMode=none
Type=forking
PIDFile=/var/run/containers/storage/overlay-containers/{{ home_assistant_id }}/userdata/conmon.pid

[Install]
WantedBy=multi-user.target
